/* pages/question/question.wxss */
.q_question {
  height: 100vh;
}
.question {
  min-height: 100%;
  padding: 10rpx;
}

.select-mode {
  margin: 20rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: justify;
  color: #42b983;
}

.mode-left {
  padding: 10rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  border: 1rpx solid #42b983;
}
.mode-right {
  padding: 10rpx;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  border: 1rpx solid #42b983;
}

.title {
  font-weight: bold;
}

.quiz_choice {
  display: flex;
  flex-direction: column;
}

.quiz_choice button {
  font-weight: normal;
  display: inline-block;
  width: 100% !important;
  border-radius: 8rpx 8rpx;
  box-shadow: 0 10rpx 20rpx 0 rgba(212, 217, 223, .5);
  text-align: left;
  height: auto;
  padding: 20rpx;
  margin: 20rpx 0 20rpx 0;
  word-break: break-all;
}

.isError {
  background: #f56c6c !important;
  color: white !important;
}
.tags {
  margin-top: 30rpx;
}
.tags text {
  margin-right: 10rpx;
}


.titles text {
  margin-right: 10rpx;
}
.titles {

  display: flex;
  align-items: center;
}
.title-left {
  width: 80%;
}
.title-right {
  width: 20%;
  text-align: right;
}
.feed {
  align-items:baseline;
}
.tip {
  color: #42b983;
}
.danger {
  color: #f56c6c;
}
.commit {
  width: 100%;
  margin-top: 10rpx;
}
.feed-btn {
  width: 100% !important;
  background: #42b983;
  color: white;
}



.nav_menu {
  left: 0;
  right: 0;
  bottom: 0;
  position: fixed;
  z-index: 766;
  padding: 20rpx;
  width: 750rpx;
  height: 106rpx;
  display: flex;
  background: #f8f8f8;
  align-items: center;
  justify-content: center;
}

.left {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: left;
}

.post {
  margin-left: 20rpx;
  padding: 10rpx 33rpx 10rpx 33rpx;
  background: #1b8cfa;
  color: white;
  border-radius: 50rpx 50rpx;
}

.right {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: right;
  margin-right: 30rpx;

}

.nums {
  display: flex;
  align-items: center;
  margin-right: 30rpx;

}

.nums:first-child {
  color: #1b8cfa;
}

.nums:nth-child(2) {
  color: #f56c6c;
}

.img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.menus {
  width: 50rpx;
  height: 50rpx;
}



.questions {
  background: white;
}

.info-title {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.info {
  padding: 15rpx;
  margin: 0 auto;
  width: 90%;
}

.choice {
  margin: 10rpx;
  border: 1px solid #f2f1f6;
  background: #f2f1f6;
  display: inline-block;
  width: 55rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  padding: 15rpx;
  border-radius: 50% 50%;
}
@import './dark.wxss'