/* pages/rank/rank.wxss */
page {
  width: 100%;
  height: 100%;
}

.rank {
  width: 100%;
  min-height: 100vh;
  position: relative;
  align-items: center;
  background-color: #42b983;
  overflow: hidden;
}

.select-mode {
  padding: 10px 0 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: justify;
  color: white;

}

.mode-left {
  padding: 5px;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-bottom: 2px solid #fff;
}

.mode-right {
  padding: 5px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  border: 2px solid #fff;

}

.mode-one {
  background: white;
  color: #42b983;
}

.mode-two {
  background: white;
  color: #42b983;
}

.rank_pre {
  color: white;
  display: flex;
  justify-content: center;
  padding: 30rpx;
}

.one,
.two,
.three {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  text-align: center;
  margin: 30rpx 30rpx 0 30rpx;
}

.one text,
.two text,
.three text {
  padding: 1px;
}

.one image,
.two image,
.three image {
  border-radius: 50px 50px;
}

.one image {
  width: 70px !important;
  height: 70px !important;
}

.pres {
  width: 25px;
  height: 25px;
}

.two image {
  width: 60px !important;
  height: 60px !important;
}

.three image {
  width: 50px !important;
  height: 50px !important;
}


.rank_other {
  min-height: 100vh;
  background: white;
  border-top-left-radius: 100rpx;
  border-top-right-radius: 100rpx;
  padding: 30px 30px 120px 30px;
}

.rank_list {
  padding: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
}

.ranknum {
  width: 15%;
  text-align: center;
}

.grade {
  width: 20%;
  text-align: center;
}

.rankgrade {
  color: #1b8cfa;
  font-weight: bold;
  font-size: 15px;
}

.user_info {
  width: 70%;
  display: flex;
  align-items: center;
  justify-content: left;
  margin-left: 30rpx;
}

.name {
  width: 60%;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.rankname text:first-child {
  font-size: 10pt;
}

.rankname text:last-child {
  color: #cacaca;
}

.self {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  border-top: 1rpx solid #eee;
  background-image: linear-gradient(to right, #41e09b, #60bd95);
  color: white;
}

.user_name {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
}

@import './dark.wxss'