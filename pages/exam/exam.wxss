/* pages/exam/exam.wxss */
.exam {
  margin-bottom: 106rpx;
  min-height: 100vh;
  padding: 10px 10px 100px;
}

.timeInterval {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx
}

.icons {
  display: inline-block;
}


.exam_img {
  padding: 30rpx 0 30rpx 0;
  width: 150rpx;
  height: 150rpx;
}

.grade_tip,
.result_time {
  text-align: center;
}

.result_info {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.info_child {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.btn_list {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn_left {
  margin-right: 50rpx;
}

.btn_right {
  margin-left: 50rpx;
}

.transi {
  transition: all .5s;
}

.title text {
  margin-right: 10rpx;
}
.title {
  display: flex;
  align-items: center;
}
.title-left {
  width: 80%;
}
.title-right {
  width: 20%;
  text-align: right;
}
.feed {
  align-items:baseline;
}
.tip {
  color: #42b983;
}
.danger {
  color: #f56c6c;
}
.commit {
  width: 100%;
  margin-top: 10rpx;
}
.feed-btn {
  width: 100% !important;
  background: #42b983;
  color: white;
}
.percent {
  transition: all .5s;
}

.exam_question {
  margin-top: 20rpx;
  padding: 10rpx;
}

.exam_option {
  width: 100%;
}


.option {
  word-break: break-all;
  height: auto;
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  background: white;
  padding: 8px;
}
.option view {
  width: 70%;
}
.option:active {
  background: #e0e6e8;
}

.exam_right {
  color: #42b983 !important;
  pointer-events: none !important;
}

.exam_right .myoption {
  background: #42b983 !important;
  color: white;
  border: none;
}

.exam_title {
  font-size: 12pt;
}

.onlyRead {
  pointer-events: none;
}

.exam_wrong {
  color: #f56c6c !important;
  pointer-events: none !important;
}

.exam_wrong .myoption {
  background: #f56c6c !important;
  color: white;
  border: none;
}


.myoption {
  background: #f2f1f6;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 10pt;
  text-align: center;
  padding: 15rpx;
  border-radius: 50% 50%;
  margin-right: 20rpx;
}

.exam_desc {
  margin-top: 20rpx;
  font-weight: bold;
  font-size: 10pt;
  color: #1b8cfa;
}

.nav_menu {
  left: 0;
  right: 0;
  bottom: 0;
  position: fixed;
  z-index: 766;
  padding: 20rpx;
  width: 750rpx;
  height: 106rpx;
  display: flex;
  background: white;
  align-items: center;
  justify-content: center;
}

.left {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: left;
}

.post {
  margin-left: 20rpx;
  padding: 10rpx 33rpx 10rpx 33rpx;
  background: #1b8cfa;
  color: white;
  border-radius: 50rpx 50rpx;
}

.right {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: right;
  margin-right: 30rpx;

}

.nums {
  display: flex;
  align-items: center;
  margin-right: 30rpx;

}

.nums:first-child {
  color: #1b8cfa;
}

.nums:nth-child(2) {
  color: #f56c6c;
}

.img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.menus {
  width: 50rpx;
  height: 50rpx;
}

.questions {
  background: white;
}

.info-title {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.info {
  padding: 15rpx;
  margin: 0 auto;
  width: 90%;
}

.choice {
  margin: 10rpx;
  border: 1px solid #f2f1f6;
  background: #f2f1f6;
  display: inline-block;
  width: 55rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  padding: 15rpx;
  border-radius: 50% 50%;
}
@import './dark.wxss'