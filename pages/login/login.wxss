/* pages/login/login.wxss */
.login-box {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  padding: 50rpx;
}
.title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20pt;
  margin: 50rpx;

}
.info{
  margin-bottom: 50rpx;
}
.title image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
}
.login-btn {
  background: #42b983;
  color: white;
  box-shadow: 0 4rpx 20rpx 0 rgba(66, 184, 130, .5);
}
.btn {
  margin: 20rpx;
  width: 100% !important;
  border-radius: 50rpx 50rpx;

}

@import './dark.wxss'